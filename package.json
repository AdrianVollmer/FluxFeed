{
  "name": "fluxfeed",
  "version": "0.1.9",
  "description": "FluxFeed RSS Reader - Tailwind CSS build",
  "scripts": {
    "build:css": "tailwindcss -i ./static/css/input.css -o ./static/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./static/css/input.css -o ./static/css/tailwind.css --watch",
    "build:ts": "node scripts/build-ts.js",
    "watch:ts": "node scripts/build-ts.js --watch",
    "build": "npm run build:css && npm run build:ts",
    "watch": "npm run watch:css & npm run watch:ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "esbuild": "^0.24",
    "tailwindcss": "^3.4",
    "typescript": "^5.7"
  }
}
